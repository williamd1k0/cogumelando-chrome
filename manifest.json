{
  "manifest_version": 2,
  "name": "Cogumelando",
  "short_name": "Cogumelando",
  "description": "Extens√£o do Cogumelando para Google Chrome",
  "version": "1.4.2",
  "icons": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
  },
  "browser_action": {
    "default_icon": "assets/icon.png",
    "default_popup": "pages/popup.html"
  },
  "options_page": "pages/options.html",
  "permissions": [
    "*://*.twitch.tv/*",
    "alarms",
    "notifications",
    "tabs"
  ],
  "background": {
      "page": "pages/background.html",
      "persistent": false
  },
  "homepage_url": "http://www.cogumelando.com.br/"
}
